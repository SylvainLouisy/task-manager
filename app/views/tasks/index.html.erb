<div class="container">
  <h1>Mes tâches</h1>

  <% @tasks.each do |task| %>
    <h2><li class="list-unstyled">
    <%= render partial: 'status', locals: {task: task} %>
    <%= link_to "#{task.title}",task_path(task) %>
    <%= link_to "🗑️", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"} %></li></h2>
  <% end %>
  <hr>
  <h4><%= link_to "➕ Ajouter une nouvelle tâche", new_task_path %></h4>
</div>
