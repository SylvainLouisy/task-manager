<div class="container">
  <h1>Update task</h1>
  <%= simple_form_for @task do |f| %>
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.input :completed, type:'checkbox' ? 'completed' : '' %>
    <%= f.submit "Update this task" %>
  <% end %>
  <%= link_to "Back to current task list", tasks_path %>
</div>
